@using Alpha.Collector.Model;
@using Alpha.Collector.Web;
@model Query<AppLog, AppLogParams>

<div class="myStyleOver">
    <div style="overflow-x: auto; white-space: nowrap;">
        <table class="table  table-striped  table-hover loading table-bordered margin-bottom-5">
            <thead>
                <tr>
                    <th width="30">#</th>
                    <th width="30"><input type="checkbox" selectall="true" /></th>
                    <th width="30">操作</th>
                    <th>时间</th>
                    <th>彩种名称</th>
                    <th>彩种代码</th>
                    <th>数据源</th>
                    <th>日志内容</th>
                </tr>
            </thead>
            <tbody>
                @{ var index = 0; }
                @foreach (var item in Model.ItemList)
                {
                    <tr>
                        <td>@Model.RowNumber(++index)</td>
                        <td><input type="checkbox" value="@item.id" selectitem="true" name="idList" /></td>
                        <td><a id="showDetail" itemId="@item.id" itemName="@item.log_message" class="btn btn-xs purple"> 日志详情</a></td>
                        <td>@item.create_time</td>
                        <td>@ModelFunction.GetLotteryName(item.lottery_code)</td>
                        <td>@item.lottery_code</td>
                        <td>@item.DataSourceText</td>
                        <td title="@item.log_message">@item.FormatMessage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Html.GridPager(Model)

