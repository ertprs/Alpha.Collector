@model List<Alpha.Collector.Model.LotteryPickDetail>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title"><i class="fa fa-bars"></i> 采集详情</h4>
</div>

<div class="modal-body">
    <div style="overflow-x: auto; white-space: nowrap;">
        <table class="table  table-striped  table-hover loading table-bordered margin-bottom-5">
            <thead>
                <tr>
                    <th width="30">#</th>
                    <th>数据源</th>
                    <th>采集器</th>
                    <th>采集器状态</th>
                    <th>今日抓取数</th>
                    <th>总抓取数</th>
                </tr>
            </thead>
            <tbody>
                @{ var index = 0; }
                @foreach (var item in Model)
                {
                    index++;
                    <tr>
                        <td>@index</td>
                        <td>@item.DataSourceName</td>
                        <td>@item.PickerName</td>
                        <td class="@(item.PickerValid ? "font-green-jungle" :"font-red")">@item.PickerValidText</td>
                        <td>@item.TodayCount</td>
                        <td>@item.TotalCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary">关闭</button>
</div>